{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false
	},
	"typeRoots": [
		"../node_modules/@types"
	],
	"exclude": [
		"node_modules"
	],
	"types": [
		"core-js"
	]
}
